<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="1column" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <head>
        <!-- <css src="BalloonGroup_NewLogin::css/result.css" rel="stylesheet" type="text/css"/> -->
    </head>
    <body>
        <referenceBlock name="ajax.message.placeholder" remove="true"/>
        <referenceBlock name="messages" remove="true"/>
        <referenceBlock name="newlogin-popup" remove="true"/>

       <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="newlogin_error" template="BalloonGroup_NewLogin::form/error.phtml"></block>
        </referenceContainer>

        <referenceContainer name="header.container" remove="false"/>
        <referenceContainer name="page-header" remove="false"/>
        <referenceContainer name="top.search" remove="false"/>
        <referenceContainer name="footer" remove="false"/>
        <referenceBlock name="page.main.title" remove="false"/>
        <move element="logo" destination="header-wrapper" before="header.right" />
    </body>
</page>